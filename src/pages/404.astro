---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
    <div class="flex flex-col items-center justify-items-center gap-7">
        <Image src={error} alt="404" height={500} width={500} class="mt-10" />
        <h1 class="text-5xl">Aqui NO hay nada</h1>
        <p class="text-2xl mb-10">Puedes revisar la direccion de la pagina por favor.</p>
        <a href="/" class="inline-block bg-gray-100 p-2 mb-b hover:bg-indigo-500 hover:text-white">A la pagina principal</a>
    </div>
</MainLayout>